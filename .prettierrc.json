{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "crlf",
  "printWidth": 120,
  "quoteProps": "consistent",
  "semi": true,
  "tabWidth": 4,
  "trailingComma": "all",
  "useTabs": false,
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": ["*.json", "*.scss", "*.yml", "*.webmanifest"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "singleQuote": true
      }
    }
  ]
}
